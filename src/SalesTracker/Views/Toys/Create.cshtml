@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Add a New Toy to Inventory</h1>
<div class="row">
    <div class="col md3"></div>
    <div class="col md9">
        <h3>Add a new Product to the Line</h3>
        <form method="post" asp-action="Create" asp-controller="Toys" enctype="multipart/form-data">
            <label for="name">Toy Name</label>
            <input type="text" id="name" required name="name" />
            <br />
            <label for="description">Toy Description</label>
            <input type="text" id="description" required name="description" />
            <br />
            <label for="cost">Toy Cost</label>
            <input type="number" id="cost" required name="cost" />
            <br />
            <label for="price">Toy Price</label>
            <input type="number" id="price" required name="price" />
            <br />          
            <label for="picture">Product Image</label>
            <br />
            <input type="file" id="picture" required name="picture" />
            <br />
            <input class="btn blue" type="submit" value="Add Product" />
            <br />
        </form>
    </div>
</div>